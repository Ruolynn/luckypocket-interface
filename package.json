{
  "name": "luckypocket-monorepo",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "dev:web": "pnpm --filter @luckypocket/web dev",
    "dev:api": "pnpm --filter @luckypocket/api dev",
    "lint": "pnpm -r lint"
  },
  "devDependencies": {
    "@mseep/linear-mcp": "^78.0.1"
  }
}
